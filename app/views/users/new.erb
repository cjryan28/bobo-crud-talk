<div class="container">
	<% if @errors %>
		<ul>
		<% @errors.each do |error| %>
			<li><p><%= error %></p></li>
		<% end %>
		</ul>
	<% end %>

	<form class="signup" action="/users" method="POST">
		<input name="user[username]" type="text" placeholder="Username">
		<input name="user[email]" type="text" placeholder="Email">
		<input name="user[hugger_type]" type="text" placeholder="Hugger Type">
		<textarea name="user[description]" type="text" placeholder="Description"></textarea>
		<input name="user[password]" type="password" placeholder="Password">
		<input name="user[password_confirmation]" type="password" placeholder="Password Confirmation">
		<input type="submit">
	</form>
</div>